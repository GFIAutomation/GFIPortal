@model gfi_test_landing.ReportCollection

@{
    ViewBag.Title = "Details";
}



<div class="form-horizontal disabled">

    <!-- Message to tell the user -->
    @*<div class="alert alert-light" role="alert">
            After updating all your fields make sure to save them.
        </div>*@

    <div class="justify-content-between">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header"><h4>Details report information</h4></div>
                <div class="card-body card-block">
                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.date_start)
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-calendar"></i></div>

                            @Html.TextBoxFor(model => model.date_start, new { @disabled = "", @class = "form-control" })
                            @*@Html.TextBoxFor(m => m.FirstName, new { @disabled = "", @class = "form-control", @placeholder = "Username" })
                                @Html.TextBoxFor(m => m.LastName, new { @disabled = "", @class = "form-control", @placeholder = "Surname" })*@
                        </div>
                    </div>
                    <div class="form-group disabled">
                        @Html.DisplayNameFor(model => model.date_end)
                        <div class="input-group disabled">
                            <div class="input-group-addon" disabled><i class="fa fa-calendar"></i></div>

                            @Html.TextBoxFor(model => model.date_end, new { @disabled = "", @class = "form-control" })
                            @*@Html.TextBoxFor(m => m.Email, new { @disabled = "", @class = "form-control", @placeholder = "Email" })*@

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.status)
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-toggle-right"></i></div>

                            @Html.TextBoxFor(model => model.status, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.general_message)
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-envelope"></i></div>

                            @Html.TextBoxFor(model => model.general_message, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.error_message)
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-envelope"></i></div>

                            @Html.TextBoxFor(model => model.error_message, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.error_type)
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-times-circle-o"></i></div>

                            @Html.TextBoxFor(model => model.error_type, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.logs)
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-briefcase"></i></div>

                            @Html.TextBoxFor(model => model.logs, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>
                    @*<div class="form-actions form-group">
                            <input type="submit" style="border-radius:4px;" class="btn btn-success" value="Update" />
                        </div>*@
                </div>
            </div>












            <!-- Password change form -->
