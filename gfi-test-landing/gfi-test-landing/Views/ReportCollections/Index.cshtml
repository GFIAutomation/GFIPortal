@model IEnumerable<gfi_test_landing.ReportCollection>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/css/lib/datatable/dataTables.bootstrap.min.css" rel="stylesheet" />

<h4>List  Report Collection</h4>
<div class="content mt-3">

    <div class="animated fadeIn">
        <div class="row">
            <div class="card-body">
                <div id="bootstrap-data-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                    <div class="col-sm-12">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="bootstrap-data-table_info">
                            <thead>
                                <tr>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.project_id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.report_id)
                                    </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.date_start)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.date_end)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.status)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.general_message)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.error_message)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.error_type)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.logs)
                                    </th>
                                    <th style="display:none"></th>
                                </tr>

                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.project_id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.report_id)
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.date_start)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.date_end)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.status)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.general_message)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.error_message)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.error_type)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.logs)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Content/TableJS")