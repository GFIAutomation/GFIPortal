@model IEnumerable<gfi_test_landing.Models.ProjectViewModel>
@{
    ViewBag.Title = "Project";
}

<h2>Avaliable projects</h2>
<br />
<hr />
<!doctype html>
<html class="no-js" lang="">
<body>
    <div class="container">
        <div class="row">
            @foreach (var li in Model)
            {

                using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="col-sm">
                        <div class="card" style="width: 15rem;height: 22rem;padding:2%;">
                            <img style="margin-top:5%; padding:10%;" class="card-img-top rounded mx-auto d-block" src="@Url.Content(li.UrlImage)" alt="">
                            <div class="card-body">
                                <h5 class="card-title" name="project_name">@Html.DisplayFor(modelItem => li.ProjectName)</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => li.ProjectDescription)</p>
                                <input type="hidden" value="@li.Id" name="project_id" />
                                <input type="submit" class="btn btn-primary" style="bottom:0;left:0;position:absolute;margin:8%;" value="Select project" />
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <script src="~/Content/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <!--  Chart js -->
    <script src="~/Content/js/lib/chart-js/Chart.bundle.js"></script>
    <script src="~/Content/js/lib/chart-js/chartjs-init.js"></script>
</body>
</html>

