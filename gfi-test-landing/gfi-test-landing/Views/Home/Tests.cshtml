
@{
    ViewBag.Title = "Tests";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Tests</h1>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Tests List</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="testsTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Test Name</th>
                                <th>Date_start</th>
                                <th>Date_end</th>
                                <th>Status</th>
                                <th>Author</th>
                                <th>Area</th>
                                <th>Duration</th>
                                <th>Screenshots</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Test Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th>Author</th>
                                <th>Area</th>
                                <th>Duration</th>
                                <th>Screenshots</th>
                                <th>Details</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>



