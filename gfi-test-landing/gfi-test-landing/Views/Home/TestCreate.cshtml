@{
    ViewBag.Title = "Home Button";
}

@model gfi_test_landing.Models.TestViewModel

<!--Content -->
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-6">
                <h2>Create test:</h2>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md">
                        <div class="input-group-lg">Name:</div>
                        @Html.TextBoxFor(m => m.TestName, new { @class = "form-control", @placeholder = "Name" })
                        @*@Html.ValidationMessageFor(m => m.TestName, "", new { @class = "text-danger" })*@
                    </div>
                </div>
                <div class="row">
                    <div class="col-md">
                        <div class="input-group-lg">Description:</div>
                        @Html.TextAreaFor(m => m.TestDescription, new { @class = "form-control", @placeholder = "Description" })
                        @*@Html.ValidationMessageFor(m => m.TestDescription, "", new { @class = "text-danger" })*@
                    </div>
                </div>
            </div>
        </div><!-- .row -->
        <div class="row justify-content-end">
            <div class="col-3">
                <input class="btn btn-success col-lg" type="button" value="Save">
            </div>
            <div class="col-3">
                <input class="btn btn-danger col-lg" type="button" value="Cancel">
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->
