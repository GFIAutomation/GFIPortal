@model List<gfi_test_landing.Models.ProjectModel>
@{
    ViewBag.Title = "MyProjects";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>My Projects</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">My Projects</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <!-- Default box -->
        <div class="row">
            @foreach (var li in Model)
            {
               @* @Html.AntiForgeryToken()*@
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">@Html.DisplayFor(modelItem => li.Name)</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            Start creating your amazing application!
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer" style="text-align:center; background-color: white;">
                            @using (Html.BeginForm())
                            {
                               
                            <input type="hidden" value="@li.Id" name="project_id" />
                            <input type="submit" class="btn btn-primary" value="Select project" />
                            }
                        </div>
                        <!-- /.card-footer-->
                    </div>
                </div>
            }
        </div>
    </div>
</section>
