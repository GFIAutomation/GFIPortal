@model gfi_test_landing.ReportCollection
@{
    ViewBag.Title = "Single test report";
}


<div class="form-horizontal disabled">

    <!-- Message to tell the user -->
    @*<div class="alert alert-light" role="alert">
            After updating all your fields make sure to save them.
        </div>*@

    <div class="justify-content-between">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header"><h4>Details single report  information</h4></div>
                <div class="card-body card-block">
                    <div class="form-group">
                        Test name
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-edit"></i></div>

                            @Html.TextBoxFor(model => model.test_name, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        Author
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-user"></i></div>

                            @Html.TextBoxFor(model => model.author, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        Date Start
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-calendar"></i></div>

                            @Html.TextBoxFor(model => model.date_start, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        Date End
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-calendar"></i></div>

                            @Html.TextBoxFor(model => model.date_end, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        Status
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-toggle-right"></i></div>

                            @Html.TextBoxFor(model => model.status, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        General Message
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-envelope"></i></div>

                            @Html.TextBoxFor(model => model.general_message, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        Error Message
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-envelope"></i></div>

                            @Html.TextBoxFor(model => model.error_message, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        Error Type
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-times-circle-o"></i></div>

                            @Html.TextBoxFor(model => model.error_type, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        Logs
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-briefcase"></i></div>

                            @Html.TextBoxFor(model => model.logs, new { @disabled = "", @class = "form-control" })
                        </div>
                    </div>

                    <p>
                        @Html.ActionLink("Back to List", "Index")
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>

