@model gfi_test_landing.Test
@{ ViewBag.Title = "Create"; }

<h2>Create Test</h2>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <b class="text-danger">@ViewBag.testname_error_message</b>
        <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Test name: " } })
        </div>
    </div>
    <div class="form-group">
        <b class="text-danger">@ViewBag.testdesc_error_message</b>
        <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
            @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Test description: " } })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-3">
                @Html.DropDownList("id_project", null, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem { Text = "Google Chrome", Value = "Google Chrome", Selected = true });
                    listItems.Add(new SelectListItem { Text = "Internet Explorer", Value = "Internet Explorer" });
                    listItems.Add(new SelectListItem { Text = "Firefox", Value = "Firefox" });
                    listItems.Add(new SelectListItem { Text = "Safari", Value = "Safari" });
                }
                @Html.DropDownListFor(model => model.broswer, listItems, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <button class="btn btn-danger" style="color:white;" value="Cancel">@Html.ActionLink("Cancel", "Index")</button>
            </div>
        </div>
    </div>
</div>
}
