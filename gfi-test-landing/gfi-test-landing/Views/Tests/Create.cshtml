@model gfi_test_landing.Test

@{
    ViewBag.Title = "Create";
}

<h2>Create Test</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    @Html.Label("Name:")
                </div>
            </div>
            <div class="row">
                <div class="col-md-11">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    <p class = "text-danger">@ViewBag.testname_error_message</p>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    @Html.Label("Descripiton:")
                </div>
            </div>
            <div class="row">
                <div class="col-md-11">
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                    <p class="text-danger">@ViewBag.testdesc_error_message</p>
                </div>
            </div>
        </div>        
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    @Html.Label("Project Name:")
                </div>
            </div>
            <div class="row">
                <div class="col-md-11">
                    @Html.DropDownList("id_project", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    @Html.Label("Browser:")
                </div>
            </div>
            <div class="row">
                <div class="col-md-11">
                    @{
                        List<SelectListItem> listItems = new List<SelectListItem>();
                        listItems.Add(new SelectListItem { Text = "Google Chrome",     Value = "Google Chrome" ,Selected = true });
                        listItems.Add(new SelectListItem { Text = "Internet Explorer", Value = "Internet Explorer" });
                        listItems.Add(new SelectListItem { Text = "Firefox",           Value = "Firefox" });
                        listItems.Add(new SelectListItem { Text = "Safari",            Value = "Safari" });
                    }
                    @Html.DropDownListFor(model => model.broswer, listItems, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <button class="btn btn-danger"> @Html.ActionLink("Cancel", "Index")</button>
                </div>
            </div>
        </div>
    </div>
}
    <h2>Steps</h2>
    <div class="form-horizontal">

    </div>

