@model IEnumerable<gfi_test_landing.Bug_reporting>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/css/lib/datatable/dataTables.bootstrap.min.css" rel="stylesheet" />

<div class="content mt-3">
    <h4>Bug reporting</h4>
    <div class="animated fadeIn">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <div class="row">

            <div class="card-body">
                <div id="bootstrap-data-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                    <div class="col-sm-12">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="bootstrap-data-table_info">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Id")
                                        @*@Html.DisplayNameFor(model => model.Bug_reporting_collection_id)*@
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Current_behaviour)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Expected_behaviour)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Browser)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Operating_system)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Date)
                                    </th>
                                    <th style="none"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Bug_reporting_collection_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Current_behaviour)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Expected_behaviour)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Browser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Operating_system)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                                        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "fa fa-list", title = "Update Bug Reporting" }) |
                                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "fa fa-trash-o", data_toggle = "modal", data_target = "#modal-container", title = "Delete Bug Reporting" })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>